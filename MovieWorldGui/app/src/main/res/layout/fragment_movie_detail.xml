<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.moviedetail.MovieDetailFragment">

    <TextView
        android:id="@+id/movie_detail_header"
        android:layout_width="341dp"
        android:layout_height="46dp"
        android:layout_marginTop="36dp"
        android:text="Movie Details"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_detail"
        android:layout_width="331dp"
        android:layout_height="322dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_detail_header" />

    <Button
        android:id="@+id/back_home"
        android:layout_width="141dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:text="Home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buy_from_detail"
        app:layout_constraintTop_toBottomOf="@+id/movie_detail" />

    <Button
        android:id="@+id/buy_from_detail"
        android:layout_width="141dp"
        android:layout_height="55dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:text="Buy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_detail" />
</androidx.constraintlayout.widget.ConstraintLayout>